<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhatToDo.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Bing.Maps"
    x:Class="WhatToDo.View.PageCreate"
    mc:Ignorable="d" FontSize="20">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColumnMenu" Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="PanelOptions" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ButtonReturn" Margin="10" Content="Voltar" HorizontalAlignment="Center" Click="ButtonReturn_Click"></Button>
                <Button x:Name="ButtonCollapse" Margin="10" Content="&lt;&lt;&lt;" Background="Transparent" HorizontalAlignment="Center" Click="ButtonCollapse_Click"></Button>
            </StackPanel>
            <TextBlock x:Name="LabelNome" Margin="10,5" Text="Nome" />
            <TextBox x:Name="TextNome" Margin="20,0"></TextBox>
            <TextBlock x:Name="LabelLocal" Margin="10,5" Text="Local" />
            <TextBox x:Name="TextLocal" Margin="20,0" ></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ButtonCreate" Margin="20" Content="Criar" HorizontalAlignment="Center"></Button>
                
            </StackPanel>
            
        </StackPanel>
        <Grid Grid.Column="1">

            <Maps:Map x:Name="MyMap" PointerPressedOverride="MyMap_PointerPressedOverride" HorizontalAlignment="Left" VerticalAlignment="Top" />

        </Grid>
    </Grid>
</Page>
